#!name= BiliBili
#!desc= Remove BiliBili Ads (BiliBili Version:6.2.1)
#!system=ios

[Rule]
URL-REGEX,https://app.bilibili.com/x/v2/(splash|search/(defaultword|square)),REJECT
URL-REGEX,https://api.bilibili.com/x/v2/dm/ad,REJECT

[MITM]
hostname = %APPEND% api.bilibili.com, app.bilibili.com, api.live.bilibili.com

[Script]
bilibili feed = type=http-response,requires-body=true, max-size=0,pattern=https://app.bilibili.com/x/v2/feed/index\?access_key,script-path=https://github.com/mark0smith/Surge-Script/raw/dev/surge%20bilibili%20feed.js
